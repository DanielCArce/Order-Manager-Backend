// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role eRole @default(USER)
}
model Companies {
  id Int @id @default(autoincrement())
  name String @unique
  email String @unique
  isFE Boolean @default(false)
  orders Orders[]
  isActive Boolean @default(true)
}
model Orders {
  id Int @id @default(autoincrement())
  orderID String @unique @default(uuid())
  date DateTime @default(now())
  clientID Int
  client Companies @relation(fields: [clientID], references: [id])
  items Json[]
  pricePerInch Int
  shippings Shippings[]
  status eStatus @default(ON_PROCESS)
}
model Shippings {
  id Int @id @default(autoincrement())
  shippingID String @unique @default(uuid())
  date DateTime @default(now())
  orderID String
  order Orders @relation(fields: [orderID], references: [orderID])
  items Json[]
}
enum eStatus {
  ON_PROCESS
  COMPLETED
}
enum eRole {
  ADMIN
  USER
  CLIENT
}