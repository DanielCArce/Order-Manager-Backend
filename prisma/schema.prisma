// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id Int @id @default(autoincrement())
  name String @db.Text
  email String @db.VarChar(255) @unique
  username String @db.VarChar(255) @unique
  password String @db.VarChar(255)
  role Role @default(USER)
}
model Order{
  id Int @id @default(autoincrement())
  order_id String @unique
  client_id Int
  date DateTime @db.Time() @default(now())
  order_items Json
  status OrderStatus @default(PENDING)
  shipping Shipping_Orders[]
}
model Company{
  id Int @id @default(autoincrement())
  kind_company CompanyType @default(CLIENT)
  legal_name String @unique
  comercial_name String
  legal_id String
  is_fe Boolean @default(false) 
}
model Shipping_Orders {
  id Int @id @default(autoincrement())
  order String
  shipping_items Json
  date DateTime @db.Time() @default(now())
  order_id Order @relation(fields: [order], references: [order_id])
}


enum Role {
  ADMIN
  USER
}
enum CompanyType {
  CLIENT
  PROVIDER
  BOTH
}
enum OrderStatus {
  PENDING
  COMPLETE
  WORKING
}