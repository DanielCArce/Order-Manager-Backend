// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
}
model Company {
  id Int @id @default(autoincrement())
  name String
  orders Order[]
  kindOf clientType
}
model Order {
  id Int @id @default(autoincrement())
  orderID String @default(uuid())
  date DateTime @default(now())
  clientID Company @relation(fields: [id], references: [id])
  pricePerInch BigInt
  items Json[]
  shippings Shipping[]
  status statusType @default(PENDING)
}
model Shipping {
  id Int @id @default(autoincrement())
  orderID Order @relation(fields:[id], references:[id])
  date DateTime @default(now())
  items Json[]
}


enum clientType {
  CLIENT
  PROVIDER
  BOTH
}
enum statusType {
  PENDING
  COMPLETED
  WORKING
}